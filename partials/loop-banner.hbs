{{!-- The template below includes the markup for each post --}}

{{#foreach pages}}
{{#is "page"}}
<div class="m-recommended-slider__item">
    {{/is}}
    {{#if feature_image}}
    <article class="m-banner-card {{post_class}}">
        <div class="m-banner-card__picture lozad" data-background-image="{{img_url feature_image size="m"}}">
            {{else}}
            <article class="m-banner-card no-picture {{post_class}}">
                <div class="m-banner-card__picture">
                    {{/if}}
                    <a href="{{url}}" class="m-banner-card__picture-link" aria-label="Article"></a>
                    <a href="{{primary_author.url}}" class="m-banner-card__author js-tooltip" aria-label="Authors"
                        data-tippy-content="{{t "Posted by"}} {{primary_author.name}} {{authors autolink="false" from="2" prefix=(t "Among with") separator=" , "}}">
                        {{#if primary_author.profile_image}}
                        <div style="background-image: url({{img_url primary_author.profile_image size="xs"}});"></div>
                        {{else}}
                        <div style="background-image: url({{asset "images/default-avatar-square-small.jpg"}});"></div>
                        {{/if}}
                    </a>
                    {{#if featured}}
                    <a href="{{url}}" class="m-banner-card__featured js-tooltip" data-tippy-content="{{t "Featured"}}"
                        aria-label="Article">
                        <span class="icon-star"></span>
                    </a>
                    {{/if}}
                </div>
                {{#if primary_tag}}
                <div class="m-banner-card__info">
                    <a href="{{primary_tag.url}}" class="m-banner-card__tag">{{primary_tag.name}}</a>
                    {{else}}
                    <div class="m-banner-card__info no-tag">
                        {{/if}}
                        <a href="{{url}}" class="m-banner-card__info-link">
                            <div>
                                <h2 class="m-banner-card__title js-article-card-title {{#unless feature_image}}js-article-card-title-no-image{{/unless}}"
                                    title="{{title}}">
                                    {{title}}
                                </h2>
                            </div>
                            <div class="m-banner-card__timestamp">
                                <span>{{date published_at timeago="true"}}</span>
                                <span>&bull;</span>
                                <span>{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
                            </div>
                        </a>
                    </div>
            </article>
            {{#is "page"}}
        </div>
        {{/is}}
        {{else}}
        <header class="m-heading no-margin">
            <h3>{{t "No posts found"}}</h3>
            <p>
                {{t "Apparently there are no posts at the moment, check again later."}}
            </p>
        </header>
        {{/foreach}}